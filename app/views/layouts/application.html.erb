<!DOCTYPE html>
<html>
  <head>
    <title>Depot</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= image_tag 'rails.svg', alt: 'The Pragmatic Bookshelf' %>
    <span class="title">
      <%= @page_title %>
    </span>
  </div>

  <div id="columns">
    <div id="side">
      <div id="cart">
        <% if @cart %>
          <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
             <%= render @cart %>
          <% end %>
        <% end %>
      </div>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/">Question</a></li>
        <li><a href="/">News</a></li>
        <li><a href="/">Contact</a></li>
      </ul>
    </div>

    <div id="main">
      <%= yield %>
    </div>
  </div>



  </body>
</html>
